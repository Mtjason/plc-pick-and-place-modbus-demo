VAR
    START_BUTTON AT %IX0.0 : BOOL;
    ARM_UP       AT %QX0.0 : BOOL;
    ARM_DOWN     AT %QX0.1 : BOOL;
    GRIPPER_OPEN AT %QX0.2 : BOOL;
    GRIPPER_CLOSE AT %QX0.3 : BOOL;
END_VAR

IF START_BUTTON THEN
    ARM_DOWN := TRUE;
    GRIPPER_CLOSE := TRUE;
    ARM_UP := TRUE;
    GRIPPER_OPEN := TRUE;
END_IF;

IF STOP_BUTTON THEN
    ARM_UP := FALSE;
    ARM_DOWN := FALSE;
    GRIPPER_OPEN := FALSE;
    GRIPPER_CLOSE := FALSE;
END_IF;
